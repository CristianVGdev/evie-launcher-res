<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <stroke android:width="1.0dip" android:color="@color/evie_sky_blue" />
            <corners android:topLeftRadius="@dimen/ss_follow_button_corner_radius" android:topRightRadius="@dimen/ss_follow_button_corner_radius" android:bottomLeftRadius="@dimen/ss_follow_button_corner_radius" android:bottomRightRadius="@dimen/ss_follow_button_corner_radius" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1.0dip" android:color="@color/evie_sky_blue_pressed" />
            <solid android:color="@color/evie_light_gray" />
            <corners android:topLeftRadius="@dimen/ss_follow_button_corner_radius" android:topRightRadius="@dimen/ss_follow_button_corner_radius" android:bottomLeftRadius="@dimen/ss_follow_button_corner_radius" android:bottomRightRadius="@dimen/ss_follow_button_corner_radius" />
        </shape>
    </item>
</selector>
